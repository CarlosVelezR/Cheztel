
@model Hotel
@{

    ViewData["Hoteles"] = "Editar Hotel";
}
<div class="col-md-8 col-lg-5 container">
    <h3 class="mb-3">Editar Hotel: @Model.Nombre </h3>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="IdServicio" />

    <div class="form-group">



        <label asp-for="Nombre">Nombre</label>
            <input type="text" class="form-control mb-3" asp-for="Nombre" />
    </div>

    <div class="form-group">
            <label asp-for="Direccion">Direccion</label>
            <input type="text" class="form-control mb-3" asp-for="Direccion" />
    </div>

    <div class="form-group">
            <label asp-for="Telefono">Telefono</label>
            <input type="text" class="form-control" asp-for="Telefono" />
    </div>

        <div class="form-group">
            <label asp-for="Responsable">Responsable</label>
            <input type="text" class="form-control mb-3" asp-for="Responsable" />
        </div>

        <div class="form-group">
            <label asp-for="Calificacion">Calificacion</label>
            <input type="text" class="form-control mb-3" asp-for="Calificacion" />


    </div>

        <button class="btn btn-primary" asp-action="Editar">Editar</button>
</form>

</div>