@model CrearHabitacionViewModel
@{

    ViewData["Habitacion"] = "Editar Habitacion";
}
<div class="col-md-8 col-lg-5 container">
    <h3 class="mb-3">Editar Habitacion: @Model.Nombre </h3>

    <form asp-action="Editar">
        <input type="hidden" asp-for="Id" />


        <div class="form-group">
            <input type="text" class="form-control mb-3" asp-for="FechaCreacion" disabled="disabled" value="@DateTime.Now.ToString("yyyy/MM/dd hh:mm:ss")"
                   placeholder="@DateTime.Now.ToString("yyyy/MM/dd hh:mm:ss")" />
        </div>

        <div class="form-group">

            <label asp-for="Nombre">Nombre</label>
            <input type="text" class="form-control mb-3" asp-for="Nombre" />
        </div>

        <div class="form-group">
            <label asp-for="Acomodacion">Acomodacion</label>
            <input type="text" class="form-control mb-3" asp-for="Acomodacion" />
            <select asp-for="Acomodacion" asp-items="Model.Acomodaciones" class="form-select mb-3"></select>
        </div>

        <div class="form-group">
            <label asp-for="Disponibilidad">Disponibilidad</label>
            <input type="text" class="form-control" asp-for="Disponibilidad" />
        </div>

        <div class="form-group">
            <label asp-for="FechaCreacion">FechaCreacion</label>
            <input type="text" class="form-control mb-3" asp-for="FechaCreacion" />
        </div>

        <div class="form-group">
            <label asp-for="Hotel">Hotel</label>
            <input type="text" class="form-control mb-3" asp-for="Hotel" />
        </div>

        <button class="btn btn-primary" asp-action="Editar">Editar</button>
    </form>

</div>