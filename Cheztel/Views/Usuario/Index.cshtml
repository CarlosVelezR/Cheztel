@model Usuario
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Cheztel.styles.css" asp-append-version="true" />
<link href="~/css/bootstrapaddition.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


<div class="row">
    <div class="fondo-city-log">
        <img src="~/img/1146008.jpg" width="100%" height="50%"/>
    </div>

    <section class="shadow form-group col-sm-4 Contenedor-Caja-login">

   <div class="text-center">
   <img src="~/img/cheztelogo.png" alt="Logo" width="200px" class="mb-1 mt-3 text-center"/>
   <h2 class="mb-3">Iniciar Sesion</h2>
   </div>

    <div>

        <form asp-action="Iniciar">

            <div class="form-outline mb-3">

                <label asp-for="Nombre" class="form-label fs-5 fw-bold"></label>
                    <input type="text" asp-for="Nombre" class="form-control font-monospace" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>

            </div>

            <div class="form-outline mb-5 center">


              
                <label asp-for="Password" class="form-label fs-5 fw-bold"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="align-content-center">

            <button class="btn btn-danger col-7" asp-action="Iniciar">Iniciar Sesion</button>
            <button class="btn btn-danger" asp-action="Registro">Registrarse</button>

            </div>
        </form>

        <section>
                <div>¿Olvidaste tu contraseña?. <a href="#" class="alert alert-light">Restablecer</a>  </div>
            </section>

    </div>

</section>

</div>
