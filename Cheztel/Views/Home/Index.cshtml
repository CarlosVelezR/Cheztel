@model Usuario
@{
    ViewData["Title"] = "Home Page";
}





<section class="form-group">
    <div class="col-md-8 col-lg-5">
    <h2 class="mb-3">Iniciar Sesion</h2>
    <form asp-action="Iniciar">

    <div class="from-outline mb-4">

        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-bg-danger"></span>

    </div>

    <div class="form-outline mb-4">

        <label asp-for="Password" class="form-label"></label>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-bg-danger"></span>
    </div>

    <button class="btn btn-primary" asp-action="Iniciar">Iniciar Sesion</button>

</form>

</div>
</section>

